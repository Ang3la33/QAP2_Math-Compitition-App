<%- include('partials/header') %>
<div class="quiz">
    <h1 class="math-quiz">Math Quiz</h1>
    <p class="questions">Answer the question below:</p>

    <!-- Dynamically display the question -->
    <p><%= question.text %></p>

    <form action="/quiz" method="POST">
        <label for="userAnswer" class="text-shadow">Your Answer:</label>
        <!-- Make sure the input name matches what the server expects -->
        <input type="text" id="userAnswer" name="userAnswer" required>
        <button type="submit">Submit</button>
    </form>
</div>

</body>
</html>
